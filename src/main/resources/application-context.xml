<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="application-context-datasource.xml"/>
    <import resource="application-context-editor.xml"/>

    <bean id="shop" class="com.xiaoxin008.spring.bean.common.Shop">
        <replaced-method name="getPeach" replacer="peachReplacer"/>
    </bean>

    <bean id="peachReplacer" class="com.xiaoxin008.spring.bean.replacer.PeachProviderMethodReplacer">
    </bean>

</beans>